<h2> 修改服务 </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title, label: '服务名称'%>
  </div>

  <div class="group">
    <%= f.input :description, label: '服务描述' %>
  </div>

  <div class="group">
    <%= f.input :quantity, label: '服务数量' %>
  </div>

  <div class="group">
    <%= f.input :price, label: '服务价格' %>
  </div>

  <% if @product.image.present? %>
  <span>目前商品图</span> <br>
    <%= image_tag(@product.image.thumb.url) %>
  <% end %>

  <div class="group">
    <%= f.input :image, as: :file %>
  </div>

  <%= f.submit "确认修改", data: { disable_with: "发布中..." } %>

<% end %>
